<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#512DA8"
    tools:context=".Create_quiz">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="25dp"
        android:fontFamily="@font/agbalumo"
        android:text="QUIZZ"
        android:textColor="#FFFF"
        android:textSize="48sp"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="92dp"
        android:layout_marginEnd="107dp"
        android:layout_marginBottom="172dp"
        android:text="By Vishal"
        android:textColor="#FFFF"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/viewQ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="Enter Your Question"
        android:textColor="#FFFF"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/ques"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/ques"
        android:layout_width="303dp"
        android:layout_height="40dp"
        android:layout_marginBottom="20dp"
        android:background="#FFFF"
        android:ems="10"
        android:hint="Type Here"
        android:inputType="text"
        android:paddingLeft="10dp"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/viewA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/viewA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="Option A"
        android:textColor="#FFFF"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/T_ques"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/T_ques"
        android:layout_width="250dp"
        android:layout_height="25dp"
        android:layout_marginBottom="20dp"
        android:background="#FFFF"
        android:ems="10"
        android:hint="Enter Option A"
        android:inputType="text"
        android:paddingLeft="10dp"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/viewB"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.513"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/viewB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="Option B"
        android:textColor="#FFFF"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/optionB"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/optionB"
        android:layout_width="250dp"
        android:layout_height="25dp"
        android:layout_marginBottom="20dp"
        android:background="#FFFF"
        android:ems="10"
        android:paddingLeft="10dp"
        android:hint="Enter Option B"
        android:inputType="text"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/viewC"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/viewC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="Option C"
        android:textColor="#FFFF"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/optionC"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/optionC"
        android:layout_width="250dp"
        android:layout_height="25dp"
        android:layout_marginBottom="20dp"
        android:background="#FFFF"
        android:ems="10"
        android:paddingLeft="10dp"
        android:hint="Enter Option C"
        android:inputType="text"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/viewD"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.513"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/viewD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="Option D"
        android:textColor="#FFFF"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/optionD"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <EditText
        android:id="@+id/optionD"
        android:layout_width="250dp"
        android:layout_height="25dp"
        android:layout_marginBottom="20dp"
        android:background="#FFFF"
        android:ems="10"
        android:hint="Enter Option D"
        android:inputType="text"
        android:paddingLeft="10dp"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/next"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_marginBottom="32dp"
        android:backgroundTint="#64DD17"
        android:text="Next"
        android:textSize="22dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="96dp"
        android:text="Choose Correct Option"
        android:textColor="#FFFF"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/next"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/linearlayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="80dp"
        android:orientation="horizontal"
        android:paddingLeft="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/Abutton"
            android:layout_width="57dp"
            android:layout_height="57dp"
            android:layout_margin="15dp"
            android:backgroundTint="#0091EA"
            android:text="A"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <Button
            android:id="@+id/Bbutton"
            android:layout_width="57dp"
            android:layout_height="57dp"
            android:layout_margin="15dp"
            android:backgroundTint="#0091EA"
            android:text="B"
            android:textSize="16sp" />

        <Button
            android:id="@+id/Cbutton"
            android:layout_width="57dp"
            android:layout_height="57dp"
            android:layout_margin="15dp"
            android:backgroundTint="#0091EA"
            android:text="C"
            android:textSize="16sp" />

        <Button
            android:id="@+id/Dbutton"
            android:layout_width="57dp"
            android:layout_height="57dp"
            android:layout_margin="15dp"
            android:backgroundTint="#0091EA"
            android:text="D"
            android:textSize="16sp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>